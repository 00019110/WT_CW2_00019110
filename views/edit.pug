doctype html
html
  head
    title Edit Review
  body
    h1 Edit Book Review
    link(rel="stylesheet" href="/styles/style.css")
    if error
      p(style="color:red") #{error}

    form(action=`/edit/${review._id}` method="POST")
      label(for="title") Title:
      input(type="text" name="title" value=review.title || '')
      br

      label(for="author") Author:
      input(type="text" name="author" value=review.author || '')
      br

      label(for="genre") Genre:
      input(type="text" name="genre" value=review.genre || '')
      br

      label(for="review") Review:
      textarea(name="review") #{review.review || ''}
      br

      button(type="submit") Update
